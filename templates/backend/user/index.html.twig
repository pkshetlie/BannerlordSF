{% extends 'base_backoffice.html.twig' %}

{% block title %}{{ "Users"|trans }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="card card-default color-palette-box">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-tag"></i>
                        {{ "Users"|trans }}
                    </h3>
                </div>
                <div class="card-body">
                    <a class="btn btn-success float-right"
                       href="{{ path('user_admin_new') }}">{{ "Create new"|trans }}</a>
                    <table class="table table-condensed">
                        <thead>
                        <tr>
                            <th>{{ "user.label.firstname"|trans }}</th>
                            <th>{{ "user.label.lastname"|trans }}</th>
                            <th>{{ "user.label.username"|trans }}</th>
                            <th>{{ "user.label.email"|trans }}</th>
                            <th>{{ "user.label.twitchID"|trans }}</th>
                            <th>{{ "user.label.discordID"|trans }}</th>
                            <th>{{ "user.label.createdAt"|trans }}</th>
                            <th>{{ "Actions"|trans }}</th>
                        </tr>
                        </thead>

                        <tbody>
                        {% for entity in paginator.entities %}
                            <tr>
                                <td>{{ entity.firstname }}</td>
                                <td>{{ entity.lastname }}</td>
                                <td>{{ entity.username }}</td>
                                <td>{{ entity.email }}</td>
                                <td>{{ entity.twitchID }}</td>
                                <td>{{ entity.discordID }}</td>
                                <td>{{ entity.createdAt.format("d/m/Y h:i") }}</td>
                                <td>
                                    <a class="btn btn-sm btn-info" href="{{ path('user_admin_edit', {'id': entity.id}) }}"><i class="fas fa-edit"></i></a>
                                    <a class="btn btn-sm btn-danger confirm-action" href="{{ path('user_admin_delete', {'id': entity.id}) }}"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="13">{{ "no records found"|trans }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    {% import "@Pagination/Pagination/macro.twig" as macro_pagination  %}
                    {{ macro_pagination.paginate(paginator) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
