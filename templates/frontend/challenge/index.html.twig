{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('home') }}
{% endblock %}
{% block body %}
    <main class="wrapper">

        <section class="section-parallax parallax-background bg1 home-title">
            <h1>Nos challenges</h1>
        </section>

        <section class="section-parallax static challenges-list">
            <div class="container">
                <div class="row">
                    {% for entity in paginator.entities %}
                        <div class="col-md-3">
                            <h3>{{ entity.title }} ({{ entity.typeStr }})</h3>
                            <img src="{{ asset('/uploads/challenge/banner/'~entity.banner) }}" class="img-fluid"
                                    alt="{{ entity.title }}"/>
                            {% if entity.isOpen %}
                                {% if is_granted('ROLE_USER') %}
                                    <a href="{{ url("challenge_participer",{id:entity.id}) }}">M'inscrire</a>
                                {% else %}
                                    connectez vous pour vous inscrire
                                {% endif %}
                            {% endif %}
                        </div>
                    {% endfor %}
                    {# ================ Structure de test ! ================ #}

                    {#  Carte prochainement #}
                    <div class="col-12 col-md-6 col-xl-4">
                        <div class="card challenge-in-coming">
                            <div class="card-img">
                                <img class="card-img-top" src="{{ asset('build/img_02.jpg') }}" alt="img challenge">
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Bannerlord HC Challenge #6</h5>
                                <div class="card-text">
                                    <img class="card-calendar" src="{{ asset('build/calendar.svg') }}" alt="img challenge">
                                    <div class="dates-challenges">
                                        <label>05 SEPT.2020 : 14h00 - 22h00</label>
                                        <label>06 SEPT.2020 : 14h00 - 22h00</label>
                                    </div>
                                </div>
                                <div class="card-buttons row">
                                    <div class="col-7"><a href="#" class="btn btn-custom btn-grey">Vidéos du tournoi</a></div>
                                    <div class="col-5"><p class="btn-cash"><label>Cash prize</label><br>100 euros</p></div>
                                    <div class="col-10"><p class="btn-in-coming">Inscriptions à partir du <label>05/08</label></div>
                                    <div class="col-2"><a href="#"><img class="card-ringbell" src="{{ asset('build/ringbell.png') }}" alt="img cloche"></a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {#  Carte En cours #}
                    <div class="col-12 col-md-6 col-xl-4">
                        <div class="card">
