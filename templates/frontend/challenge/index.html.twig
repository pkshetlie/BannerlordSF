{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('home') }}
{% endblock %}
{% block body %}
    <main class="wrapper">

        <section class="section-parallax parallax-background bg1 home-title">
            <h1>Nos challenges</h1>
        </section>

        <section class="section-parallax static challenges-list">
            <div class="container">
                <div class="row">
                    {% for entity in paginator.entities %}
                        <div class="col-12 col-md-6 col-xl-4">
                            <div class="card challenge-in-coming">
                                <div class="card-img">
                                    <img class="card-img-top"
                                         src="{{ entity.banner is not empty ? asset('/uploads/challenge/banner/'~entity.banner) : asset('build/img_02.jpg') }}"
                                         alt="img challenge">
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">{{ entity.title }}</h5>
                                    <div class="card-text d-flex justify-content-around">
                                        <div class="text-center">
                                        <i class="fa fa-2x fa-calendar ml-2"></i>
                                        </div>
                                        <div class="dates-challenges">
                                            {% for dates in entity.challengeDates  %}
                                            <label>{{ dates.startDate.format('d M. H:i') }} - {{ dates.endDate.format('d M. H:i') }} </label>
                                            {% endfor %}
                                        </div>
                                    </div>
                                    <div class="card-buttons row">
                                        <div class="col-7"><a href="#" class="btn btn-custom btn-grey">Vidéos du
                                                tournoi</a></div>
                                        <div class="col-5"><p class="btn-cash"><label>Cash prize</label><br>100 euros
                                            </p></div>

                                        {% if entity.isOpen %}
                                            <div class="col-7">
                                                <div class="progress">
                                                    <div class="progress-bar" role="progressbar" style="width: 25%"
                                                         aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                                </div>
                                                <label class="text-center w-100 nb-inscrit">{{ entity.participations|length }}
                                                    /{{ entity.maxChallenger }} inscrits</label>
                                            </div>
                                            <div class="col-5">
                                                <a href="{{ url("challenge_participer",{id:entity.id}) }}" class="btn btn-custom btn-bottom-right">S'inscrire</a>
                                            </div>
                                        {% elseif entity.isPast %}
                                            <div class="col-7">
                                                <label class="text-center w-100 nb-inscrit">{{ entity.participations|length }}
                                                    participants</label>
                                            </div>
                                            <div class="col-5"><a href="#" class="btn btn-custom btn-bottom-right">Résultats</a>
                                            </div>
                                        {% elseif entity.isFuture %}
                                             <div class="col-10"><p class="btn-in-coming">Inscriptions à partir du
                                                <label>{{ entity.registrationOpening.format('d/m') }}</label>
                                            </div>
                                            <div class="col-2 alert-bell">
                                                <a data-target="#alert-futur-modal" data-toggle="modal" href="#">
                                                    <i class="fa fa-2x fa-bell"></i>
                                                </a>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                        {# Modal alert bell #}
                        <div class="modal fade" id="alert-futur-modal" tabindex="-1" role="dialog" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title text-center">Restez en alerte !</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <i class="flag flag-right"></i>
                                    <i class="flag flag-left"></i>
                                    <div class="modal-body">
                                        <form action="" method="get" class="">
                                            <div class="msg-mail-alert">
                                                <p class="mb-3">Afin de recevoir une alerte lorsque l'incription sera ouverte, merci de bien renseigner votre email :</p>
                                            </div>

                                            <div class="mail-input-alert form-group focused mb-4">
                                                <input type="email" id="email" required>
                                                <span class="highlight"></span>
                                                <span class="bar"></span>
                                                <label for="email" class="required">Email</label>
                                            </div>


                                            <div class="send-mail-alert"><button type="submit" class="btn btn-custom btn-green active">Envoyer</button></div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}






